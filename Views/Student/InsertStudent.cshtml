<html>
@using Student015.Models 
@model Student 
    @*--------Header Section Start-------*@
    <head>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    </head> @*--------Header Section End-------*@
<body>

    <center><h1> Insert Student Detail </h1></center>

    @*--------Insert Form Section Starts-------*@

    @using (Html.BeginForm("InsertStudent", "Student", FormMethod.Post, new { Class = "Container" }))
    {
        <div class="form-group">
            <h4>Student Name:</h4>
            @Html.TextAreaFor(s => s.Name, new { Class = "form-control", Placeholder = "Enter Student Name" })
            @Html.ValidationMessageFor(s => s.Name, "", new { Class = "text-danger" })
        </div>
        <div class="form-group">
            <h4>Course:</h4>
            @Html.TextAreaFor(s => s.Course, new { Class = "form-control", Placeholder = "Enter Course Name" })
            @Html.ValidationMessageFor(s => s.Course, "", new { Class = "text-danger" })
        </div>
        <div class="form-group">
            <h4>Semester:</h4>
            @Html.TextAreaFor(s => s.Semester, new { Class = "form-control", Placeholder = "Enter Semester Detail" })
            @Html.ValidationMessageFor(s => s.Semester, "", new { Class = "text-danger" })
        </div>
        <div class="form-group">
            <h4>Birth Year:</h4>
            @Html.TextAreaFor(s => s.BirthYear, new { Class = "form-control", Placeholder = "Enter Student Birth Year" })
            @Html.ValidationMessageFor(s => s.BirthYear, "", new { Class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-outline-success" />
        </div>

        @*--------Insert Form Section End-------*@
    }
</body>
</html>